{
  "name": "htland-backend",
  "version": "1.0.0",
  "description": "HTLand Backend - Production Ready Iranian Backend",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "cross-env NODE_ENV=development nodemon src/server.js",
    "prod": "cross-env NODE_ENV=production node src/server.js",
    "test": "cross-env NODE_ENV=test jest --coverage --verbose",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:ci": "cross-env NODE_ENV=test jest --coverage --ci --maxWorkers=2",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "security": "npm audit",
    "docker:build": "docker build -t htland-backend:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env htland-backend:latest",
    "render:deploy": "npm run prod",
    "migrate": "node src/migrations/migrate.js",
    "seed": "node src/seeders/seed.js"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "check-disk-space": "^3.3.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "express-status-monitor": "^1.2.3",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "prom-client": "^14.2.0",
    "redis": "^4.6.8",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-jest": "^27.2.3",
    "jest": "^29.6.4",
    "mongodb-memory-server": "^8.13.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/",
      "/src/migrations/",
      "/src/seeders/"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/server.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "iranian",
    "wallet",
    "payment",
    "zarinpal",
    "ecommerce",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "HTLand Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/htland/backend.git"
  },
  "bugs": {
    "url": "https://github.com/htland/backend/issues"
  },
  "homepage": "https://htland.ir"
}
